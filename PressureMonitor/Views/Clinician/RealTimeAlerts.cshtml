<!-- Trigger button -->
<button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#pressureAlertModal">
    View Pressure Alerts
</button>

<!-- Modal -->
<div class="modal fade" id="pressureAlertModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Real-Time Pressure Alerts</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-0">
                <iframe src="/Error/Index" width="100%" height="380" style="border:0;"></iframe>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>