@model PressureMonitor.Models.Patient

@{
    ViewData["Title"] = "Upload Data";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    .page-header h1 {
        font-size: 2rem;
        font-weight: bold;
        color: #13438b;
        margin: 0;
    }
    
    .upload-section {
        border: 2px solid #333;
        padding: 20px;
        margin-bottom: 20px;
    }
    .section-title {
        font-weight: bold;
        color: #13438b;
        margin-bottom: 15px;
        font-size: 1.1rem;
    }
    .upload-form {
        display: flex;
        gap: 15px;
        align-items: flex-end;
        flex-wrap: wrap;
    }
    .file-input-wrapper {
        flex: 1;
        min-width: 250px;
    }
    .file-input-wrapper label {
        display: block;
        font-size: 0.85rem;
        margin-bottom: 5px;
        color: #666;
    }
    .file-input {
        width: 100%;
        padding: 8px 12px;
        border: 2px solid #333;
        background: #fff;
    }
    .upload-btn {
        padding: 10px 30px;
        background: #13438b;
        color: #fff;
        border: 2px solid #333;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.2s;
    }
    .upload-btn:hover {
        background: #0d2f5e;
    }
    
    .alert-box {
        padding: 12px 15px;
        margin-bottom: 15px;
        border: 2px solid;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .alert-error {
        background: #ffe6e6;
        border-color: #cc0000;
        color: #cc0000;
    }
    .alert-success {
        background: #e6ffe6;
        border-color: #00cc00;
        color: #006600;
    }
    .alert-close {
        background: none;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        padding: 0 5px;
    }
    
    .data-section {
        border: 2px solid #333;
        padding: 20px;
    }
    .data-table {
        width: 100%;
        border-collapse: collapse;
    }
    .data-table th {
        text-align: left;
        padding: 10px;
        border-bottom: 2px solid #333;
        font-weight: bold;
        color: #13438b;
    }
    .data-table td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }
    .data-table tr:hover {
        background: #f5f5f5;
    }
    .view-btn {
        padding: 6px 20px;
        background: #cca808;
        border: 2px solid #333;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        color: #000;
        font-size: 0.85rem;
    }
    .view-btn:hover {
        background: #e7e07b;
    }
    .no-data {
        text-align: center;
        padding: 40px;
        color: #666;
    }
</style>

<div class="page-header">
    <h1>Upload Pressure Data</h1>
</div>

<div class="upload-section">
    <div class="section-title">Upload CSV File</div>
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <form asp-action="Upload" asp-controller="PressureMap" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="upload-form">
            <div class="file-input-wrapper">
                <label>Select a CSV file (format: PatientID_YYYYMMDD.csv)</label>
                <input type="file" name="file" class="file-input" accept=".csv" required />
            </div>
            <button type="submit" class="upload-btn">Upload</button>
        </div>
    </form>
</div>

<div class="data-section">
    <div class="section-title">Uploaded Data</div>
    
    @if (Model.PressureMaps.Count == 0)
    {
        <div class="no-data">No pressure data uploaded yet</div>
    }
    else
    {
        <table class="data-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Frames</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var map in Model.PressureMaps.OrderByDescending(m => m.Day))
                {
                    <tr>
                        <td>@map.Day.ToString("yyyy-MM-dd")</td>
                        <td>@map.Frames.Count frames</td>
                        <td>
                            <a class="view-btn" asp-controller="Patient" asp-action="ViewPressureMap" asp-route-day="@map.Day.ToString("yyyy-MM-dd")">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
